{
    "name": "tithely/exo",
    "description": "A flexible database migration library",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*"
    },
    "config": {
        "platform": {
            "php": "8.0"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "symfony/yaml": "^5.0",
        "phpspec/prophecy": "^1.22.0",
        "doctrine/instantiator": "^1.5",
        "symfony/deprecation-contracts": "^2.4",
        "vimeo/psalm": "^5.26"
    },
    "scripts":{
        "test": "./vendor/bin/phpunit -c phpunit.xml",
        "psalm": "vendor/bin/psalm"
    },
    "autoload": {
        "psr-4": {
            "Exo\\": "src/",
            "Exo\\Tests\\": "tests/"
        }
    }
}
